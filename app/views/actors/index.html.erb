<h1>Actors</h1>
<p><a href="/actors/new_form">Create a New Actor</a></p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>" width="80"></td>
        <td><%= actor.dob %></td>
        <td><%= actor.name %></td>
        <td><%= truncate(actor.bio) %></td>
        <td>
          <a href="/actors/<%= actor.id %>">Show</a>
        </td>
        <td>
          <a href="/actors/<%= actor.id %>/edit_form">Edit</a>
        </td>
        <td>
          <a href="/delete_actors/<%= actor.id %>">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
