<h1>Edit Movie #<%= @movies.id %></h1>

<form action="/update_movies/<%= @movies.id %>">
  <div>
    <div>
      <label for="title">
        Title
      </label>
      <div>
        <input type="text" id="title" name="title" placeholder="Movie Title" value="<%= @movies.title %>">
      </div>
    </div>
    <div>
      <label for="year">
        Year
      </label>
      <div>
        <input type="text" id="year" name="year" placeholder="Movie Year" value="<%= @movies.year %>">
      </div>
    </div>
    <div>
      <label for="duration">
        Duration
      </label>
      <div>
        <input type="text" id="duration" name="duration" placeholder="Duration" value="<%= @movies.duration %>">
      </div>
    </div>
    <div>
      <label for="description">
        Description
      </label>
      <div>
        <textarea id="description" name="description" placeholder="description" rows="3"><%= @movies.description %></textarea>
      </div>
    </div>
    <div>
      <label for="image_url">
        Image url
      </label>
      <div>
        <input type="text" id="image_url" name="image_url" placeholder="Image url" value="<%= @movies.image_url %>">
      </div>
    </div>
    <div>
      <div>
        <input type="submit" value="Update Movie">
      </div>
    </div>
</form>
